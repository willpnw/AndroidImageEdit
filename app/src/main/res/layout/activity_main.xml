<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="yougnomeme.yougnomeme.MainActivity">
    <ImageView
        android:id="@+id/uxImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:src="@drawable/camera"/>
    <LinearLayout
        android:id="@+id/uxSliders"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <SeekBar
                android:progress="100"
                android:id="@+id/uxSeekBarW"
                android:layout_width="match_parent"
                android:secondaryProgress="100"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:progress="100"
                android:id="@+id/uxSeekBarH"
                android:layout_width="match_parent"
                android:secondaryProgress="100"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:progress="0"
                android:id="@+id/uxSeekBarA"
                android:layout_width="match_parent"
                android:secondaryProgress="100"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:progress="0"
                android:id="@+id/uxSeekBarR"
                android:layout_width="match_parent"
                android:secondaryProgress="100"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:progress="0"
                android:id="@+id/uxSeekBarG"
                android:layout_width="match_parent"
                android:secondaryProgress="100"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:progress="0"
                android:id="@+id/uxSeekBarB"
                android:layout_width="match_parent"
                android:secondaryProgress="100"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
